{{ form_start(form) }}
    <div class="col-xs-6 col-sm-3">
        <div class="form-group">
            {{ form_row(form.name) }}
        </div>
        <div class="form-group">
            {{ form_row(form.attack) }}
        </div>
        <div class="form-group">
            {{ form_row(form.abilityAttack) }}
        </div>
    </div>
    <div class="col-xs-6 col-sm-3">
        <div class="form-group">
            {{ form_row(form.defence) }}
        </div>
        <div class="form-group">
            {{ form_row(form.abilityDefence) }}
        </div>
    </div>
    <div class="clear"></div>
    <div class="form-control-submit">
        <button class="btn btn-primary button">{{ button_label|default('Add to battle') }}</button>
    </div>
{{ form_end(form) }}

